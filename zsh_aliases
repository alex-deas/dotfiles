#/usr/bin/env zsh

function vi_open {
  readonly target_dir=${1:?"The target directory must be specified"}
  readonly original_dir=$PWD
  cd $target_dir
  vi
  cd $original_dir
}

alias dotfiles="vi ~/dotfiles"
alias irc="irssi"
alias python="python3"
alias vi="nvim"
alias update_commit_time='GIT_COMMITTER_DATE="`date`" git commit --amend --date "`date`"'
alias re-source="source ~/.zshrc"
alias t="tree -L 1"
alias vimrc="vi_open ~/.config/nvim/"
alias zshrc="vi ~/.zshrc"
alias wmrc="vi_open ~/.config/i3"
alias linode="linode-cli"
alias kc="kubectl"
alias gs="git status"
alias gl="git log"

