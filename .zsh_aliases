#/usr/bin/env zsh

function vi_open {
  readonly target_dir=${1:?"The target directory must be specified"}
  readonly original_dir=$PWD
  cd $target_dir
  vi
  cd $original_dir
}

if [ -s "$HOME/.local/bin/nvim.appimage" ]; then
  alias nvim="~/.local/bin/nvim.appimage"
  export EDITOR="~/.local/bin/nvim.appimage"
else
  export EDITOR="nvim"
fi
alias dotfiles="vi_open ~/dotfiles"
alias irc="irssi"
alias python="python3"
alias update_commit_time='GIT_COMMITTER_DATE="`date`" git commit --amend --date "`date`"'
alias re-source="source ~/.zshrc"
alias vi="nvim"
alias t="tree -L 1"
alias linode="linode-cli"
alias kc="kubectl"
alias gs="git status"
alias gl="git log"

